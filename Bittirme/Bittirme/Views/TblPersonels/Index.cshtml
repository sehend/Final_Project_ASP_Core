@model IEnumerable<Core.Models.TblPersonel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<a href="@Url.Action("Index","Ekrankartis")" class="btn btn-primary">Ekrankartis</a>
<a href="@Url.Action("Index","mice")" class="btn btn-primary">Mouse</a>
<a href="@Url.Action("Index","rams")" class="btn btn-primary">rams</a>
<a href="@Url.Action("Index","ssds")" class="btn btn-primary">ssds</a>
<a href="@Url.Action("RamExcel","Excel")" class="btn btn-primary">RamExcel</a>
<a href="@Url.Action("EkranKartıExcel","Excel")" class="btn btn-primary">EkranKartıExcel</a>
